{
  "uid": "api-performance",
  "title": "API Performance",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-1h", "to": "now" },
  "timezone": "browser",
  "tags": ["performance", "api"],
  "panels": [
    {
      "id": 1,
      "title": "Avg Request Duration by Endpoint (ms)",
      "type": "timeseries",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 0 },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
          "expr": "avg_over_time({app=\"order-service\"} | json | RequestPath=~`(?i)/api/.*` | label_format RequestPath=`{{ .RequestPath | lower }}` | unwrap Elapsed [$__interval]) by (RequestMethod, RequestPath)",
          "legendFormat": "{{RequestMethod}} {{RequestPath}}",
          "refId": "A",
          "queryType": "range"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never",
            "spanNulls": false
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "none" },
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": ["mean", "max", "last"]
        }
      }
    }
  ],
  "templating": {
    "list": [
      {
        "hide": 0,
        "includeAll": false,
        "label": "Loki",
        "multi": false,
        "name": "DS_LOKI",
        "options": [],
        "query": "loki",
        "refresh": 1,
        "type": "datasource"
      }
    ]
  }
}
