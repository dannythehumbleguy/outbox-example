{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=shop;Username=postgres;Password=postgres"
  },
  "Kafka": {
    "Brokers": "kafka:9092",
    "Producer": {
      "MessageSendMaxRetries": 3,
      "MessageTimeoutMs": 5000,
      "RequestTimeoutMs": 2000
    }
  },
  "Loki": {
    "Url": "http://loki:3100"
  },
  "Otel": {
    "TempoEndpoint": "http://localhost:4317"
  },
  "OutboxHeartbeat": {
    "ProcessingTimeoutSeconds": 30,
    "PollingIntervalSeconds": 10
  },
  "Outbox": {
    "BatchSize": 100,
    "MaxRetries": 5,
    "InitialRetryDelaySeconds": 2
  },
  "OutboxCleanup": {
    "BatchSize": 10000,
    "RetentionMinutes": 5,
    "PollingIntervalSeconds": 60
  }
}
